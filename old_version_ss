+    <shadow:shadow-algorithm id="user-id-insert-match-algorithm" type="VALUE_MATCH">
+        <props>
+            <prop key="operation">insert</prop>
+            <prop key="column">user_id</prop>
+            <prop key="value">1</prop>
+        </props>
+    </shadow:shadow-algorithm>
 
